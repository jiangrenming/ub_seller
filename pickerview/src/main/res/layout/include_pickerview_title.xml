<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
    >

    <Button
        android:id="@+id/btnSubmit1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:gravity="center_vertical|left"
        android:paddingLeft="70dp"
        android:paddingRight="10dp"
        android:text="确定"
        android:textColor="@drawable/selector_pickerview_btn"
        android:textSize="@dimen/pickerview_topbar_btn_textsize"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="选择城市"
        android:layout_toLeftOf="@+id/btnSubmit1"
        android:layout_toRightOf="@+id/btnCancel1"
        android:textColor="@color/pickerview_topbar_title"
        android:textSize="@dimen/pickerview_topbar_title_textsize" />

    <Button
        android:id="@id/btnCancel1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:visibility="gone"
        android:paddingRight="70dp"
        android:text="取消"
        android:textColor="@color/pickerview_timebtn_pre"
        android:textSize="@dimen/pickerview_topbar_btn_textsize" />
</RelativeLayout>
