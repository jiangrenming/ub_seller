<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ub_bg"
    >
    <com.example.huangjinding.ub_seller.HeadView
        android:id="@+id/hv_head"
        style="@style/title_height"
        android:layout_width="match_parent"
        ></com.example.huangjinding.ub_seller.HeadView>
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="180dp"
         android:background="@mipmap/beijing"
         >

         <com.example.huangjinding.ub_seller.seller.util.XCRoundRectImageView
             android:id="@+id/iv_logo"
             android:layout_width="80dp"
             android:layout_height="80dp"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:padding="10dp"
             android:layout_marginLeft="15dp"
             android:src="@mipmap/touxiang"
             />
            <LinearLayout
                android:id="@+id/ll_seller_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_logo"
                android:layout_marginTop="45dp"
                android:paddingLeft="35dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_seller_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="left"
                    style="@style/text_fontsize_l"
                    android:textColor="@color/white"
                    />
                 <TextView
                     android:id="@+id/tv_get_count"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"

                     android:layout_gravity="left"
                     style="@style/text_fontsize_ss"
                     android:layout_marginTop="10dp"
                     android:textColor="@color/white"
                     />
                <TextView
                    android:id="@+id/tv_wating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="left"
                    android:layout_marginTop="5dp"
                    style="@style/text_fontsize_ss"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="left"
                    android:layout_marginTop="5dp"
                    style="@style/text_fontsize_ss"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    ></LinearLayout>

           <ImageView
               android:id="@+id/iv_code"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_toRightOf="@+id/ll_seller_info"
               android:layout_marginTop="45dp"
              android:layout_marginRight="10dp"
               android:layout_alignParentRight="true"
               android:src="@mipmap/erweima"
               />
         <TextView
             android:id="@+id/tv_aplay_balance"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/bg_border_white_2radius"
             android:text="申请提现"
             android:textColor="@color/white"
             style="@style/text_fontsize_ms"
             android:layout_alignParentBottom="true"
             android:layout_alignParentRight="true"
             android:layout_marginBottom="30dp"
             android:padding="5dp"
             android:layout_marginRight="15dp"
             />
     </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_tip"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日收益"
                style="@style/text_fontsize_m"
                android:textColor="@color/text_red"
                />
            <LinearLayout
                android:id="@+id/ll_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                >
                <TextView
                    android:id="@+id/tv_today_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_red"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sanijao"
                    />

            </LinearLayout>

        </LinearLayout>
        <View
           android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_tip"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计收益"
                style="@style/text_fontsize_m"
                android:textColor="@color/text_gray"
                />
            <LinearLayout
                android:id="@+id/ll_already_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                >
                <TextView
                    android:id="@+id/tv_aleady_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sanijao"
                    android:visibility="gone"
                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/gray_tip"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
       android:paddingRight="15dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_today_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日收益明细"
            android:textColor="@color/text_gray"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textColor="@color/text_gray"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_tip"
        />
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        ></ListView>

</LinearLayout>